# ================================
# AI Chat Studio - 环境变量配置
# ================================
# 复制此文件为 .env.local 并填入你的实际值

# ================================
# OpenAI API 配置
# ================================
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_OPENAI_API_BASE=https://api.openai.com/v1
VITE_OPENAI_ORG_ID=
VITE_OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# ================================
# Anthropic Claude API 配置
# ================================
VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
VITE_ANTHROPIC_API_BASE=https://api.anthropic.com
VITE_ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229

# ================================
# Google Gemini API 配置
# ================================
VITE_GOOGLE_API_KEY=your-google-api-key-here
VITE_GOOGLE_API_BASE=https://generativelanguage.googleapis.com
VITE_GOOGLE_DEFAULT_MODEL=gemini-pro

# ================================
# 应用配置
# ================================
VITE_APP_NAME=AI Chat Studio
VITE_APP_VERSION=2.1.0
VITE_APP_ENV=development

# ================================
# 后端 API 配置
# ================================
VITE_BACKEND_API_URL=http://localhost:8000
VITE_BACKEND_WS_URL=ws://localhost:8000

# ================================
# 功能开关
# ================================
VITE_ENABLE_VOICE_CHAT=true
VITE_ENABLE_CODE_EXECUTION=true
VITE_ENABLE_MCP_INTEGRATION=true
VITE_ENABLE_PWA=true

# ================================
# 监控和分析
# ================================
# Sentry 错误追踪
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0

# Google Analytics
VITE_GA_TRACKING_ID=

# ================================
# 性能配置
# ================================
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_MAX_MESSAGE_HISTORY=1000
VITE_CACHE_TTL_MINUTES=60

# ================================
# 安全配置
# ================================
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ================================
# 存储配置
# ================================
VITE_USE_INDEXEDDB=true
VITE_STORAGE_QUOTA_MB=100

# ================================
# 开发者选项
# ================================
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_OVERLAY=false
VITE_ENABLE_MOCK_API=false
